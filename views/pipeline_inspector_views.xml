                    <div class="container-fluid p-4" style="background-color: #f8f9fa; min-height: 100vh;">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="d-flex align-items-center gap-2">
                                <div class="bg-white border rounded p-2 text-center" style="width: 40px; height: 40px;">
                                    <i class="fa fa-cube text-muted"/>
                                </div>
                                <div>
                                    <h2 class="mb-0 fw-bold text-dark">
                                        <field name="pipeline_name" placeholder="Pipeline Name"/>
                                    </h2>
                                    <small class="text-muted">Pipeline Details •
                                        <field name="location" nolabel="1" class="d-inline"/>
                                    </small>
                                </div>
                            </div>
                            <button name="action_delete_pipeline" string="Delete Pipeline" type="object"
                                    class="btn btn-danger text-white" confirm="Delete this record?"/>
                        </div>

                        <div class="card border-0 shadow-sm mb-4 rounded-3">
                            <div class="card-body p-4">
                                <h4 class="fw-bold text-dark mb-4">Basic Information</h4>
                                <group>
                                    <group>
                                        <field name="id" string="Serial Number" readonly="1"/>
                                        <field name="location" placeholder="Enter location..."/>
                                        <field name="engineer_id" widget="many2one_avatar_user"/>
                                    </group>
                                    <group>
                                        <field name="create_date" string="Created" readonly="1" widget="date"/>
                                    </group>
                                </group>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm mb-4 rounded-3">
                            <div class="card-body p-4">
                                <h4 class="fw-bold text-dark mb-1">Question Set</h4>
                                <group>
                                    <group>
                                        <field name="area" string="Area"/>
                                        <field name="system_name" string="System Name"/>
                                        <field name="drawing_iso_number" string="Drawing ISO Number"/>
                                        <field name="design_pressure_bar_min" string="Design Pressure (Bar) Min"/>
                                        <field name="design_pressure_bar_max" string="Design Pressure (Bar) Max"/>
                                        <field name="design_temp_c_min" string="Design Temp (°C) Min"/>
                                        <field name="design_temp_c_max" string="Design Temp (°C) Max"/>
                                        <field name="insulation" string="Insulation"/>
                                        <field name="design_code" string="Design Code"/>
                                        <field name="corr_allowance" string="Corr. Allowance (mm)"/>
                                        <field name="operation_pressure" string="Operation pressure"/>
                                        <field name="operation_temp" string="Operation Temp"/>
                                        <field name="painting" string="Painting"/>
                                    </group>
                                    <group invisible="1">
                                        <field name="content_material"/>
                                        <field name="material_grade"/>
                                        <field name="material_lining"/>
                                        <field name="diameter"/>
                                        <field name="pipe_schedule"/>
                                        <field name="pipe_thickness"/>
                                    </group>
                                </group>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm mb-4 rounded-3">
                            <div class="card-body p-4">
                                <h4 class="fw-bold text-dark mb-2">Pipeline Images</h4>
                                <span class="text-muted small d-block mb-3">High-resolution schematic and visual
                                    inspection data
                                </span>
                                <field name="image_ids" widget="many2many_binary" string="Upload Images"/>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm mb-4 rounded-3">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <h4 class="fw-bold text-dark mb-0">Pipeline Supports</h4>
                                        <small class="text-muted">Structural supports and components</small>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <button name="action_print_report" string="Generate report" type="object"
                                                class="btn btn-link text-muted" style="text-decoration: none;"/>
                                        <button name="action_add_support" string="+ Add Support" type="object"
                                                class="btn btn-primary btn-sm"/>
                                    </div>
                                </div>
                                <field name="support_ids" mode="kanban">
                                    <kanban create="0">
                                        <field name="name"/>
                                        <field name="state"/>
                                        <field name="cup_type"/>
                                        <templates>
                                            <t t-name="card">
                                                <div class="d-flex flex-column p-3 mb-2 border rounded bg-white shadow-sm w-100">
                                                    <div class="mb-3">
                                                        <h5 class="fw-bold text-dark mb-1 text-center">
                                                            <field name="name"/>
                                                        </h5>
                                                        <div class="text-center text-muted small">
                                                            <field name="cup_type"/>
                                                        </div>
                                                    </div>
                                                    <div class="text-center mb-3">
                                                        <i class="fa fa-picture-o fa-3x text-muted"/>
                                                    </div>
                                                    <div class="d-flex justify-content-between align-items-center mt-2 border-top pt-2">
                                                        <button name="action_view_inspection" type="object"
                                                                class="btn btn-sm text-secondary">
                                                            <i class="fa fa-eye"/>
                                                            View Inspection
                                                        </button>
                                                        <field name="state" widget="badge"
                                                               decoration-success="state == 'reviewed'"
                                                               decoration-info="state == 'pending'"
                                                               decoration-danger="state == 'issue'"/>
                                                        <div class="d-flex gap-1">
                                                            <button name="action_edit_last_inspection" type="object"
                                                                    class="btn btn-sm btn-outline-danger">
                                                                <i class="fa fa-pencil"/>
                                                                Edit Inspection
                                                            </button>
                                                            <a type="delete" class="btn btn-sm btn-danger text-white">
                                                                <i class="fa fa-trash"/>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record id="pipeline_inspector_pipeline_list_view" model="ir.ui.view">
            <field name="name">pipeline.inspector.pipeline.list</field>
            <field name="model">pipeline.inspector.pipeline</field>
            <field name="arch" type="xml">
                <list string="Pipelines">
                    <field name="id"/>
                    <field name="pipeline_name"/>
                    <field name="location"/>
                    <field name="state" widget="badge" decoration-success="state == 'done'"/>
                    <field name="supports_count"/>
                    <field name="inspections_count"/>
                    <button name="action_open_form" type="object" icon="fa-info-circle" title="View Details"/>
                </list>
            </field>
        </record>

        <record id="action_pipeline_inspector_pipeline" model="ir.actions.act_window">
            <field name="name">Pipelines</field>
            <field name="res_model">pipeline.inspector.pipeline</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>