        <record id="view_pipeline_support_create_form" model="ir.ui.view">
            <field name="name">pipeline.inspector.support.create.form</field>
            <field name="model">pipeline.inspector.support</field>
            <field name="priority">999</field>
            <field name="arch" type="xml">
                <form string="Add New Support">
                    <sheet>
                        <div class="mb-4">
                            <h3 class="fw-bold">Add New Support</h3>
                            <span class="text-muted">Enter the support name and upload images.</span>
                        </div>
                        <label for="support_code" string="Support Name" class="fw-bold"/>
                        <div class="o_row d-flex gap-2 mb-3">
                            <field name="support_code" placeholder="Support (e.g., ABC00000/DEF000)" style="flex: 1;"/>
                            <field name="support_level" placeholder="Level (e.g., L.01/L.02)" style="flex: 1;"/>
                            <field name="pipe_ref" placeholder="Pipe (e.g., P.123)" style="flex: 1;"/>
                        </div>
                        <group>
                            <field name="cup_type" placeholder="Select option" widget="selection"/>
                            <field name="pipeline_id" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Create Support" special="save" class="btn btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

