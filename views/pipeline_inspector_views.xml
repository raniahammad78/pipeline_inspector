                                <field name="q1_condition" widget="selection" string="Condition"/>
                                <field name="q1_comment" string="Comments" placeholder="Add comments..."/>
                                <field name="q1_recommendation" string="Recommendations"
                                       placeholder="Add recommendations..."/>
                            </group>
                            <div class="fw-bold mt-2">Add More Photos (up to 5)</div>
                            <field name="q1_images" widget="many2many_binary"/>
                        </div>

                        <div class="mb-4 p-3 bg-light rounded border">
